<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>

            <% include ./partials/messages %>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">郵箱：</label>
                    <input type="email" id="email" name="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">密碼：</label>
                    <input type="password" id="password" name="password" class="form-control"
                       />
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block">登入</button>
            </form>
            <hr class="my-4">
            <div class="row">
                <div class ="col">
                        <a class="btn btn-lg btn-info btn-block" href="/auth/google" role="button">Google 快速登入</a>

                </div>            
                <div class="col">
                        <a class="btn btn-lg btn-info btn-block" href="/auth/register" role="button">註冊</a>

                </div>
            </div>


        </div>
        
    </div>
</div>